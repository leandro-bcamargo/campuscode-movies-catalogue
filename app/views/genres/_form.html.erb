<%= link_to 'Back', genres_path %>

<% if flash[:notice] %>
  <div style="margin: 10px 0">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div style="margin: 10px 0">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with model: @genre do |f| %>
  <div>
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.submit 'Save' %>
  </div>
<% end %>